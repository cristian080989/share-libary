pipeline {
    agent any
    stages {
        stage('Stages Running in Parallel'){
            failFast true
            parallel {
                stage ('Stage1') {
                    steps {
                        echo "Stage1 executing"
                        sleep 10
                    }
                }
                stage ('Stage2'){
                    steps {
                        echo "Stages2 executing"
                        sleep 2
                        echo "error"
                    }
                }
                stage ('Stage3') {
                    steps {
                        echo "Stages3 executing"
                        sleep 10
                    }
                }
            }
        }
    }
}
